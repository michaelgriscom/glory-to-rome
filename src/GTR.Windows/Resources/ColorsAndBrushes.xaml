    <SolidColorBrush x:Key="ArchitectBrush" Color="{StaticResource ArchitectColor}" />
    <!-- This sucks, but I don't know how to define a single brush that we can change the color on. -->
    <DrawingBrush x:Key="StoneFoundation"
                  Stretch="None"
                  TileMode="Tile"
                  Viewport="0,0 20,20"
                  ViewportUnits="Absolute">
        <DrawingBrush.Drawing>
            <GeometryDrawing>
                <GeometryDrawing.Geometry>
                    <!-- draw a diagonal line -->
                    <GeometryGroup>
                        <!-- top-left to bottom-right -->
                        <LineGeometry StartPoint="0,0" EndPoint="20,20" />
                        <LineGeometry StartPoint="-20,0" EndPoint="20,40" />
                        <LineGeometry StartPoint="0,-20" EndPoint="40,20" />
                    </GeometryGroup>
                </GeometryDrawing.Geometry>
                <GeometryDrawing.Pen>
                    <!-- set color and thickness of lines -->
                    <Pen Thickness="7" Brush="{StaticResource MerchantBrush}" />
                </GeometryDrawing.Pen>
            </GeometryDrawing>
        </DrawingBrush.Drawing>
    </DrawingBrush>
