<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">
    <Color x:Key="MerchantColor">#FF3333FF</Color>
    <Color x:Key="PatronColor">#FF993399</Color>
    <Color x:Key="CraftsmanColor">#FF009933</Color>
    <Color x:Key="LaborerColor">#FFFFEC00</Color>
    <Color x:Key="LegionnaireColor">#FFFF3300</Color>
