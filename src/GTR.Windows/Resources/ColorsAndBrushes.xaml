    <SolidColorBrush x:Key="PatronBrush" Color="{StaticResource PatronColor}" />
    <SolidColorBrush x:Key="CraftsmanBrush" Color="{StaticResource CraftsmanColor}" />
    <SolidColorBrush x:Key="LaborerBrush" Color="{StaticResource LaborerColor}" />
