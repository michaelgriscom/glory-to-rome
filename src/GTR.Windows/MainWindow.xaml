<Window x:Class="GTR.Windows.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:uc="clr-namespace:GTR.Windows.UserControls"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        mc:Ignorable="d"
        xmlns:design="clr-namespace:GTR.Windows.Design"
        Title="MainWindow" Height="480" Width="640">
    <DockPanel>
        <uc:CampControl DockPanel.Dock="Top"
                        DataContext="{Binding Path=Player.Camp}"
                        d:DataContext="{d:DesignInstance design:DesignCamp, IsDesignTimeCreatable=True}" />
    </DockPanel>
</Window>