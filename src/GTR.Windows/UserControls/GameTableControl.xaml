<UserControl
	xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
	xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
	xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
	xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
	xmlns:Design="clr-namespace:GTR.Windows.Design" xmlns:local="clr-namespace:GTR.Windows"
	mc:Ignorable="d"
	x:Class="GTR.Windows.GameTableControl"
	x:Name="UserControl"
	d:DesignWidth="640" d:DesignHeight="480" d:DataContext="{d:DesignInstance {x:Type Design:DesignGameTable}}">
	<UserControl.Resources>
		<DataTemplate x:Key="PlayerTemplate">
			<StackPanel>
				<TextBlock Text="{Binding PlayerName}"/>
			</StackPanel>
		</DataTemplate>
	</UserControl.Resources>

	<Grid x:Name="LayoutRoot">
		<ListBox x:Name="listBox" HorizontalAlignment="Left" Height="53" ItemTemplate="{DynamicResource PlayerTemplate}" ItemsSource="{Binding Players}" Margin="164.5,10,0,0" VerticalAlignment="Top" Width="251"/>
		<local:PlayerControl HorizontalAlignment="Left" Margin="-10,68,0,0" VerticalAlignment="Top" DataContext="{Binding SelectedItem, ElementName=listBox}" HorizontalContentAlignment="Center" VerticalContentAlignment="Top"/>
	</Grid>
</UserControl>