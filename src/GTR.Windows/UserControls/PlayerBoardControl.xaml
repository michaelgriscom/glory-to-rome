<UserControl
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    xmlns:uc="clr-namespace:GTR.Windows.UserControls"
    mc:Ignorable="d"
    x:Class="GTR.Windows.PlayerBoardControl"
    x:Name="UserControl"
    d:DesignWidth="640" d:DesignHeight="600"
    xmlns:design="clr-namespace:GTR.Windows.Design">

    <DockPanel d:DataContext="{d:DesignInstance design:DesignBoard, IsDesignTimeCreatable=True}">
        <uc:CampControl DockPanel.Dock="Top"
                        DataContext="{Binding Path=Camp}"
                        Width="500"
                        Height="400"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center" />
        <uc:HandControl DockPanel.Dock="Bottom"
                        DataContext="{Binding Path=Hand}"
                        Width="500"
                        Height="200"
                        HorizontalAlignment="Stretch"
                        VerticalAlignment="Center" />
    </DockPanel>
</UserControl>