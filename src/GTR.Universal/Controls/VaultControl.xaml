<UserControl
    x:Class="GTR.Universal.Controls.VaultControl"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:local="using:GTR.Universal.Controls"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    mc:Ignorable="d"
    d:DesignHeight="300"
    d:DesignWidth="400">

    <StackPanel d:DataContext="{d:DesignData /SampleData/VaultSampleData.xaml}" HorizontalAlignment="Left"
                VerticalAlignment="Top">
        <TextBlock x:Name="textBlock2" TextWrapping="Wrap" Text="VAULT" />
        <StackPanel Width="100" Orientation="Horizontal" HorizontalAlignment="Left" VerticalAlignment="Top">
            <TextBlock x:Name="textBlock" HorizontalAlignment="Left" TextWrapping="Wrap"
                       Text="{Binding Count, Mode=OneWay}" d:LayoutOverrides="HorizontalAlignment" Height="300" />
            <TextBlock x:Name="textBlock1" TextWrapping="Wrap" Text="x Cards" HorizontalAlignment="Left" Height="300" />
        </StackPanel>

    </StackPanel>
</UserControl>